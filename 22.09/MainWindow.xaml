<Window x:Class="NumberGuessingGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вгадай число" Width="400" Height="200">
    <Grid>
        <Label Content="Загадайте число від 1 до 100:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="userGuessTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Margin="170,10,0,0"/>
        <Button Content="Відправити" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="230,10,0,0" Click="SubmitGuess_Click"/>
        <Button Content="Нова гра" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="310,10,0,0" Click="NewGame_Click"/>
        <Label x:Name="resultLabel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
    </Grid>
</Window>
